            </div>

            <div class="subTitlesLink OurItem">
              <p><i class="icon bi-copy"></i> Subtitle Links</p>
              <span class="ourData" id="link" onclick="copyText()">
                <%= content.subTitlesLink %></span
              >
            </div>

            <div class="buttons">
              <button type="submit" class="btn edit" onclick="window.location.href=`/edit/<%= content.id %>`">
                Edit <i class="icon bi-pencil-square"></i>
              </button>
              <form  method="post">
                <button type="submit" class="btn delete" formaction="/delete/<%= content.id %>">
                  Delete <i class="icon bi-trash"></i>
                </button>
                </form>
            </div>

          </div>

        </div>

      </div>

      <% } %>
    </section>

    <script src="/js/view.js"></script>

  </body>
</html>
